<html>
  <body>
    <h1>Books</h1>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
        </tr>
      </thead>
      <tbody>
        <% Book.all.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "show", book_path(book.id) %></td>
            <td><%= link_to "Edit", edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <h2>New book</h2>
  
      <% if @book.errors.any? %>
        <%= @book.errors.count %> create error
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      
      <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <form>
          
          <div class="field">
            <label for="book_title">Title</label>
            <%= f.text_field :title %>
          </div>
          
          <div class="field">
            <label for="book_body">Body</label>
            <%= f.text_area :body %>
          </div>
          
          <div class="actions"><%= f.submit 'Create Book' %></div>
        </form>
      <% end %>
  </body>
</html>