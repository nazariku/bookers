<h1>Books</h1>

<h4>Title</h4>
<h4>Body</h4>

<% @books.each do |book| %>
<p><%= book.title %></p>
<p><%= book.body %></p>
<%= link_to "show", book_path(book.id) %>
<%= link_to "Edit", edit_book_path(book.id) %>
<% end %>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>

 <h4>Title</h4>
 <%= f.text_field :title %>
 
 <h4>Body</h4>
 <%= f.text_area :body %>
 
 <%= f.submit 'Create Book' %>
<% end %> 
