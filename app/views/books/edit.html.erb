<div class="text_success">
  <%= flash[:notice] %>
</div>

<h1>Editing Book</h1>

<form>
<% if @book.errors.any? %>
  <%= @book.errors.count %> update error
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
<div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
</div>

 <div>
   <h4>Body</h4>
   <%= f.text_area :body %>
 </div>
 
 <div>
    <%= f.submit 'Update Book' %>
  </div>
</form>

  <%= link_to "show", book_path %>
  |
  <%= link_to "Back", index_book_path %>
  
<% end %>
