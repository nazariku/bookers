
    <h1>Editing Book</h1>
    
    <div id="error_explanation">
      <% if @book.errors.any? %>
        <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    </div>

    <%= form_with model: @book, url:update_book_path(@book.id), method: :patch do |f| %>
      
        <div class="field">
          <label for="book_title">Title</label>
          <%= f.text_field :title %>
        </div>

        <div class="field">
          <label for="book_body">Body</label>
          <%= f.text_area :body %>
        </div>
 
        <div class="actions">
          <%= f.submit 'Update Book' %>
        </div>
     
    <% end %>

    <%= link_to("Show", book_path, {class: "Show"}) %>
    |
    <%= link_to("Back", index_book_path, {class: "Back"}) %>
